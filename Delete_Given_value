package Linklist;

public class Delete_Node {
		static Node head;
		static class Node
		{
			int data;
			Node next;
			Node(int data)
			{
				this.data=data;
			}
		}
		void add(int data)
		{
			Node add=new Node(data);
			add.next=head;
			head=add;
		}
		void delete(int data)
		{
			Node prev=null;
			Node n=head;
			if(data==1)
				head=head.next;
			else {
			while(n!=null)
			{
				if(n.data==data) {
					prev.next=prev.next.next;
				}
				prev=n;
				n=n.next;
			}
			}
		}
		void traverse(Node n)
		{
			while(n!=null)
			{
				System.out.print(n.data+" ");
				n=n.next;
			}
		}
		public static void main(String args[])
		{
			Delete_Node list=new Delete_Node();
			list.add(4);
			list.add(3);
			list.add(24);
			list.add(1);
			list.traverse(head);
			System.out.println();
			list.delete(24);
			list.traverse(head);
		}
}

Output: 1 24 3 4 
        1 3 4 
